    <body>
        <div class="container">
            <h1>
                <%= user.name %>'s To-do List Warehouse
            </h1>
            <p>
                <%= introduction.en %>
                <br>
                <%= introduction.cn %>
            </p>

            <% user.lists.forEach((list)=> { %>
                <% if (list && list.description) { %>
                    <h1>
                        <%= list.title %>
                    </h1>
                    <p>
                        <%= list.description.substring(0, 100)+'...' %>
                        <a href="/list/<%= list._id %>">Open this List</a>
                    </p>
                <% } %>
            <% }) %>
           
            

