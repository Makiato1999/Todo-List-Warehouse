    <body>
        <div class="container list">

            <%- include('list/header'); -%>
            <div class="box" id="heading">
                <h1 style="color: white;">
                    <%= list.title %>
                </h1>
                <p>
                    <%= list.description %>
                </p>
            </div>

            <div class="box">
                <% list.items.forEach(perItem => { %>
                    <form class="check_box" action="/delete" method="POST">
                        <div class="item">    
                            <input type="checkbox" name="selectedItem" value="<%= perItem._id %>" onchange="this.form.submit()">
                            <p><%= perItem.item %></p>
                        </div>
                        <input type="hidden" name="listID" value="<%= list._id %>">
                    </form>
                <% }) %>
                
                <form class="item" action="/list/<%= list._id %>" method="POST">
                    <input type="text" name="inputNewItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="list" value="<%= list._id %>" >+</button>
                </form>
            </div>

    <%- include('home/footer'); -%>