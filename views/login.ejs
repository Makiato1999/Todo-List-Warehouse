<%- include('login/header'); -%>
<body class="text-center">


    <main class="form-signin w-100 m-auto">
        <% if (typeof error !== 'undefined' && error !== null) { %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <form action="/login" method="post">
            <img class="mb-4" src="image/mountain.png" alt="" width="180" height="180">
            <h1 class="h3 mb-3 fw-normal">To-do List Warehouse</h1>

            <input type="email" name="email" class="form-control top" placeholder="Email" required autofocus>
            <input type="password" name="password" class="form-control bottom" placeholder="Password" required autofocus>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Log in</button>
            <a href="/signup">Don't have an account?</a>

            <p class="mt-5 mb-3 text-muted">&copy; https://github.com/Makiato1999</p>
        </form>
    </main>

</body>
<%- include('login/footer'); -%>
